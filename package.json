{
  "name": "lexwebb.co.uk",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://lexwebb.github.io",
  "dependencies": {
    "@craco/craco": "^6.4.5",
    "classnames": "^2.3.2",
    "framer-motion": "^7.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "react-markdown": "^8.0.3",
    "react-router-dom": "^6.4.1",
    "react-scripts": "5.0.1",
    "react-spring": "^9.5.2",
    "sass": "^1.54.3",
    "typescript": "^4.7.4",
    "usehooks-ts": "^2.7.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "deploy": "gh-pages -d build",
    "lint:css": "stylelint src/**/*.css",
    "lint:js": "eslint src --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "lint-fix": "yarn lint-fix:css && yarn lint-fix:js",
    "lint-fix:css": "stylelint src/**/*.css --fix",
    "lint-fix:js": "eslint src --fix --ext .ts,.tsx,.js,.jsx --max-warnings 0"
  },
  "eslintConfig": {
    "plugins": [
      "react",
      "import"
    ],
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": [
          "**/*.tsx"
        ],
        "rules": {
          "react/prop-types": "off",
          "@typescript-eslint/explicit-module-boundary-types": "off",
          "no-unused-vars": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.47",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gh-pages": "^4.0.0",
    "prettier": "^2.7.1",
    "stylelint": "^14.5.3",
    "stylelint-config-css-modules": "^3.0.0",
    "stylelint-config-standard": "^25.0.0"
  }
}
